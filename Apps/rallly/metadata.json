{
  "id": "rallly",
  "name": "Rallly",
  "description": "Rallly is an open-source scheduling and collaboration tool designed to make organizing events and meetings easier.",
  "tagline": "Rallly",
  "version": "4.3.1",
  "image": "lukevella/rallly",
  "developer": "lukevella",
  "author": "BigBearTechWorld",
  "icon": "https://cdn.jsdelivr.net/gh/selfhst/icons/png/rallly.png",
  "thumbnail": "",
  "screenshots": [],
  "category": "BigBearCasaOS",
  "architectures": [
    "amd64",
    "arm64"
  ],
  "main_service": "big-bear-rallly",
  "port_map": "3000",
  "tips": {
    "before_install": {
      "en_us": "Before you install read this: https://community.bigbeartechworld.com/t/added-rallly-to-bigbearcasaos/1012#instructions-3\n"
    }
  },
  "services_metadata": {
    "big-bear-rallly": {
      "envs": [
        {
          "container": "DATABASE_URL",
          "description": {
            "en_us": "Database URL: postgres://rallly:f87c7126-f816-47ef-9193-2e5eec763fcd@big-bear-rallly-db/big-bear-rallly"
          }
        },
        {
          "container": "SECRET_PASSWORD",
          "description": {
            "en_us": "Secret password for application security"
          }
        },
        {
          "container": "NEXT_PUBLIC_BASE_URL",
          "description": {
            "en_us": "Frontend URL: http"
          }
        },
        {
          "container": "NOREPLY_EMAIL",
          "description": {
            "en_us": "Email used for sending no-reply messages"
          }
        },
        {
          "container": "SUPPORT_EMAIL",
          "description": {
            "en_us": "Support contact email"
          }
        },
        {
          "container": "SMTP_HOST",
          "description": {
            "en_us": "SMTP server host"
          }
        },
        {
          "container": "SMTP_PORT",
          "description": {
            "en_us": "SMTP server port"
          }
        },
        {
          "container": "SMTP_SECURE",
          "description": {
            "en_us": "SMTP server security"
          }
        },
        {
          "container": "SMTP_USER",
          "description": {
            "en_us": "SMTP server username"
          }
        },
        {
          "container": "SMTP_PWD",
          "description": {
            "en_us": "SMTP server password"
          }
        },
        {
          "container": "SMTP_TLS_ENABLED",
          "description": {
            "en_us": "SMTP server TLS enabled"
          }
        },
        {
          "container": "ALLOWED_EMAILS",
          "description": {
            "en_us": "Allowed emails for the application"
          }
        }
      ]
    },
    "big-bear-rallly-db": {
      "envs": [
        {
          "container": "POSTGRES_PASSWORD",
          "description": {
            "en_us": "Database password"
          }
        },
        {
          "container": "POSTGRES_DB",
          "description": {
            "en_us": "Database name"
          }
        },
        {
          "container": "POSTGRES_USER",
          "description": {
            "en_us": "Database user"
          }
        }
      ]
    }
  },
  "links": {
    "big_bear_casaos_youtube": "https://youtu.be/2MY3S6csrVw",
