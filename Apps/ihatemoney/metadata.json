{
  "id": "ihatemoney",
  "name": "I Hate Money",
  "description": "I hate money is a web application made to ease shared budget management. It keeps track of who bought what, when, and for whom; and helps to settle the bills.",
  "tagline": "A simple shared budget manager web application",
  "version": "6.1.5",
  "image": "ihatemoney/ihatemoney",
  "developer": "spiral-project",
  "author": "BigBearTechWorld",
  "icon": "https://cdn.jsdelivr.net/gh/selfhst/icons/png/ihatemoney.png",
  "thumbnail": "",
  "screenshots": [],
  "category": "BigBearCasaOS",
  "architectures": [
    "amd64",
    "arm64"
  ],
  "main_service": "big-bear-ihatemoney",
  "port_map": "8001",
  "tips": {},
  "services_metadata": {
    "big-bear-ihatemoney": {
      "envs": [
        {
          "name": "SECRET_KEY",
          "description": {
            "en_us": "Sets the secret key environment variable for the application."
          }
        },
        {
          "name": "SQLALCHEMY_DATABASE_URI",
          "description": {
            "en_us": "Database connection string."
          }
        },
        {
          "name": "ACTIVATE_ADMIN_DASHBOARD",
          "description": {
            "en_us": "Enables the admin dashboard."
          }
        },
        {
          "name": "ADMIN_PASSWORD",
          "description": {
            "en_us": "Sets the admin password. On the host run: docker run -it --rm --entrypoint ihatemoney ihatemoney/ihatemoney generate_password_hash"
          }
        },
        {
          "name": "SESSION_COOKIE_SECURE",
          "description": {
            "en_us": "Disables secure session cookies for development."
          }
        }
      ],
      "ports": [
        {
          "container": "8000",
          "description": {
            "en_us": "Container Port: 8000"
          }
        }
      ]
    },
    "big-bear-ihatemoney-db": {
      "envs": [
        {
          "name": "MYSQL_ROOT_PASSWORD",
          "description": {
            "en_us": "Root password for MariaDB."
          }
        },
        {
          "name": "MYSQL_DATABASE",
          "description": {
            "en_us": "Default database name."
          }
        },
        {
          "name": "MYSQL_USER",
          "description": {
            "en_us": "Username for MariaDB."
          }
        },
        {
          "name": "MYSQL_PASSWORD",
          "description": {
            "en_us": "Password for the MariaDB user."
          }
        }
      ],
      "ports": [
        {
          "container": "3306",
          "description": {
            "en_us": "Container Port: 3306"
          }
        }
      ]
    }
  },
