  "tips": {
    "before_install": {
      "en_us": "### Additional Instructions:\nAfter finished installing, open the `app settings` and update the `API_URL` to point it to your Home Server's IP Address.\ne.g:\n``` http://192.168.31.31:5003\n```\n### Default credentials:\nUsername: `admin@admin.com` Password: `1234`\n"
    }
  },
  "services_metadata": {
    "db": {
      "envs": [
        {
          "container": "PUID",
          "description": {
            "en_us": "for UserID"
          }
        },
        {
          "container": "PGID",
          "description": {
            "en_us": "for GroupID"
          }
        },
        {
          "container": "TZ",
          "description": {
            "en_us": "specify a timezone to use, see this list."
          }
        },
        {
          "container": "POSTGRES_DB",
          "description": {
            "en_us": "Specify the name of a database to be created on image startup."
          }
        },
        {
          "container": "POSTGRES_USER",
          "description": {
            "en_us": "Postgres server username"
          }
        },
        {
          "container": "POSTGRES_PASSWORD",
          "description": {
            "en_us": "Postgres server password"
          }
        }
      ],
      "volumes": [
        {
          "container": "/var/lib/postgresql/data",
          "description": {
            "en_us": "Directory where Postgres database data is stored"
          }
        }
      ]
    }
  },
