    "environment_variables": [
      {
        "name": "PORT",
        "default": "",
        "description": "Web application port",
        "required": false
      },
      {
        "name": "DATABASE_PATH",
        "default": "",
        "description": "SQLite database file path",
        "required": false
      },
      {
        "name": "TRUSTED_LOCAL_EMAIL",
        "default": "",
        "description": "Trusted local email for authentication",
        "required": false
      },
      {
        "name": "CACHE_TIMEOUT_MS",
        "default": "",
        "description": "Cache timeout in milliseconds",
        "required": false
      },
      {
        "name": "DISABLE_CACHE",
        "default": "",
        "description": "Disable caching (true/false)",
        "required": false
      },
      {
        "name": "INCLUDE_UDP",
        "default": "",
        "description": "Include UDP ports in scanning (true/false)",
        "required": false
      },
      {
        "name": "DEBUG",
        "default": "",
        "description": "Enable debug logging (true/false)",
        "required": false
      }
    ],
    "volumes": [
      {
        "container": "/data",
        "description": "Portracker Data Directory"
      },
      {
        "container": "/var/run/docker.sock",
        "description": "Docker Socket for Container Discovery"
      }
