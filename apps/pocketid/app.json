    "environment_variables": [
      {
        "name": "APP_URL",
        "default": "",
        "description": "Application URL for pocket-id",
        "required": false
      },
      {
        "name": "TRUST_PROXY",
        "default": "",
        "description": "Whether to trust proxy headers",
        "required": false
      },
      {
        "name": "MAXMIND_LICENSE_KEY",
        "default": "",
        "description": "MaxMind license key for geolocation (optional)",
        "required": false
      },
      {
        "name": "PUID",
        "default": "",
        "description": "User ID for file permissions",
        "required": false
      },
      {
        "name": "PGID",
        "default": "",
        "description": "Group ID for file permissions",
        "required": false
      }
    ],
    "volumes": [
      {
        "container": "/app/data",
        "description": "Container Path: /app/data"
      }
    ],
    "ports": [
      {
        "container": "1411",
        "host": "1411",
        "protocol": "tcp",
        "description": "Container Port: 1411"
      }
    ]
