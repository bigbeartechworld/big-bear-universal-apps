    "id": "dockhand",
    "name": "Dockhand",
    "description": "Modern, efficient Docker management application providing real-time container management, Compose stack orchestration, and multi-environment support. Features include interactive terminal access, file browser, Git integration, and SSO via OIDC. All in a lightweight, secure and privacy-focused package.",
    "tagline": "Modern Docker management you will like",
    "version": "latest",
    "author": "BigBearTechWorld",
    "developer": "Finsys",
    "category": "BigBearCasaOS",
    "license": "BSL 1.1",
    "homepage": "https://dockhand.pro",
    "source": "big-bear-universal",
    "created": "2026-01-07T00:00:00Z",
    "updated": "2026-01-07T00:00:00Z"
  },
  "visual": {
    "icon": "https://cdn.jsdelivr.net/gh/selfhst/icons/png/dockhand.png",
    "thumbnail": "",
    "screenshots": [],
    "logo": "https://cdn.jsdelivr.net/gh/selfhst/icons/png/dockhand.png"
  },
  "resources": {
    "youtube": "",
    "documentation": "https://dockhand.pro/manual/",
    "repository": "https://github.com/Finsys/dockhand",
    "issues": "https://github.com/Finsys/dockhand/issues",
